<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="402dp"
        android:layout_height="108dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cookingbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/booknauan" />

        <ImageView
            android:id="@+id/techbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookcongnghe" />

        <ImageView
            android:id="@+id/textbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookgiaokhoa" />

        <ImageView
            android:id="@+id/Lawbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookphapluat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/religiousbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/booktongiao" />

        <ImageView
            android:id="@+id/fashionbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookthoitrang" />

        <ImageView
            android:id="@+id/childrenbooks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookthieunhi" />

        <ImageView
            android:id="@+id/medicinebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/bookyte" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sciencebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookkhoahoc" />

        <ImageView
            android:id="@+id/horrorbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookkinhdi" />

        <ImageView
            android:id="@+id/itbook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookit" />

        <ImageView
            android:id="@+id/languagebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/bookngoaingu" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />
</RelativeLayout>